@model MVCClient.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
}
<div>
    <h4>Create Employee</h4>
    <hr />
</div>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Create">
            @Html.AntiForgeryToken()
            <div class="form-group mb-2">
                <label>Name</label>
                <input type="text" class="form-control" name="Name">
            </div>
            <div class="form-group mb-5">
                <label>Salary</label>
                <input type="text" class="form-control" name="Salary">
            </div>
            <br />
            <input class="btn btn-success" type="submit" value="Create Employee">
            @Html.ActionLink("Back to List", "Index", "Employee", null, new { @class = "btn btn-primary" })
        </form>
    </div>
</div>